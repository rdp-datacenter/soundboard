{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./*"],
        "@/types/*": ["./types/*"],
        "@/commands/*": ["./commands/*"],
        "@/handlers/*": ["./handlers/*"],
        "@/utils/*": ["./utils/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }